<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="222.0" prefWidth="320.0" spacing="5.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="dev.joseluisgs.calculadorafx.controllers.CalculadoraController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Label prefHeight="18.0" prefWidth="60.0" text="Núm A:"/>
                <TextField fx:id="textNumA" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="230.0"
                           promptText="0.0"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0"
              spacing="10.0">
            <children>
                <Label prefHeight="18.0" prefWidth="60.0" text="Núm B:"/>
                <TextField fx:id="textNumB" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="230.0"
                           promptText="0.0"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="162.0" prefHeight="100.0" prefWidth="200.0"
              spacing="10.0">
            <children>
                <Label prefHeight="18.0" prefWidth="60.0" text="Resultado:"/>
                <TextField fx:id="textResultado" alignment="CENTER_RIGHT" editable="false" prefHeight="26.0"
                           prefWidth="230.0" promptText="0.0">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </TextField>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <HBox alignment="CENTER" layoutX="15.0" layoutY="212.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Button fx:id="botonSumar" mnemonicParsing="false" text="Sumar"/>
                <Button fx:id="botonRestar" layoutX="10.0" layoutY="32.0" mnemonicParsing="false" text="Restar"/>
                <Button fx:id="botonMultiplicar" layoutX="71.0" layoutY="32.0" mnemonicParsing="false"
                        text="Multiplicar"/>
                <Button fx:id="botonDividir" layoutX="132.0" layoutY="32.0" mnemonicParsing="false" text="Dividir"/>
            </children>
        </HBox>
    </children>
</VBox>
